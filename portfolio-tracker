/* =======================
   STATE
======================= */
let holdings = [];
let priceHistory = [];
let currentType = 'stock-us';
let currentFilter = 'all';
let editingId = null;
let deleteCallback = null;
let searchTimeout = null;
let isUpdating = false;
let lastUpdateTime = null;

/* =======================
   KURLAR
======================= */
const exchangeRates = {
    USD: 1,
    TRY: 0.026,
    EUR: 1.08,
    GBP: 1.26
};
let usdTryRate = 38.5;

/* =======================
   DOM
======================= */
const addBtn = document.getElementById('addBtn');
const addModal = document.getElementById('addModal');
const addForm = document.getElementById('addForm');
const typeTabs = document.getElementById('typeTabs');
const filterTabs = document.getElementById('filterTabs');
const holdingsList = document.getElementById('holdingsList');
const themeToggle = document.getElementById('themeToggle');
const confirmModal = document.getElementById('confirmModal');
const refreshBtn = document.getElementById('refreshBtn');

/* =======================
   INIT
======================= */
function init() {
    setupEventListeners();
    setupTheme();
    render();
}
init();

/* =======================
   THEME
======================= */
function setupTheme() {
    if (window.matchMedia('(prefers-color-scheme: light)').matches) {
        document.documentElement.classList.add('light');
        themeToggle.innerHTML = '<i class="fas fa-sun"></i>';
    }
}

/* =======================
   EVENTS
======================= */
function setupEventListeners() {
    addBtn.addEventListener('click', () => openModal());
    themeToggle.addEventListener('click', () => {
        document.documentElement.classList.toggle('light');
        themeToggle.innerHTML =
            document.documentElement.classList.contains('light')
                ? '<i class="fas fa-sun"></i>'
                : '<i class="fas fa-moon"></i>';
    });

    typeTabs.querySelectorAll('.tab').forEach(tab => {
        tab.addEventListener('click', () => switchType(tab.dataset.type));
    });

    filterTabs.querySelectorAll('.filter-tab').forEach(tab => {
        tab.addEventListener('click', () => switchFilter(tab.dataset.filter));
    });

    document.getElementById('confirmCancel').onclick = () =>
        confirmModal.classList.remove('active');

    document.getElementById('confirmOk').onclick = () => {
        confirmModal.classList.remove('active');
        if (deleteCallback) deleteCallback();
    };
}

/* =======================
   TYPE / FILTER
======================= */
function switchType(type) {
    currentType = type;

    typeTabs.querySelectorAll('.tab').forEach(t =>
        t.classList.toggle('active', t.dataset.type === type)
    );

    [
        'stockFields','cashFields','depositFields','goldFields',
        'silverFields','platinumFields','copperFields',
        'cryptoFields','etfFields','fundFields','viopFields'
    ].forEach(id => {
        const el = document.getElementById(id);
        if (el) el.style.display = 'none';
    });

    if (document.getElementById(type + 'Fields')) {
        document.getElementById(type + 'Fields').style.display = 'block';
    }
}

function switchFilter(filter) {
    currentFilter = filter;
    filterTabs.querySelectorAll(t =>
        t.classList.toggle('active', t.dataset.filter === filter)
    );
    renderHoldings();
}

/* =======================
   MODAL
======================= */
function openModal(h = null) {
    editingId = h ? h.id : null;
    addModal.classList.add('active');
    if (h) fillForm(h);
}
function closeModal() {
    addModal.classList.remove('active');
    editingId = null;
}

/* =======================
   VALUE CALC
======================= */
function getHoldingValueUSD(h) {
    if (h.type === 'stock-us') return h.quantity * h.currentPrice;
    if (h.type === 'stock-tr') return h.quantity * h.currentPrice / usdTryRate;
    if (h.type === 'gold') return h.quantity * h.currentPrice / usdTryRate;
    if (h.type === 'silver') return h.quantity * h.currentPrice / usdTryRate;
    if (h.type === 'platinum') return h.quantity * h.currentPrice / usdTryRate;
    if (h.type === 'copper') return h.quantity * h.currentPrice / usdTryRate;
    if (h.type === 'crypto') return h.quantity * h.currentPrice;
    return 0;
}

/* =======================
   RENDER
======================= */
function render() {
    renderSummary();
    renderChart();
    renderHoldings();
}

function renderSummary() {
    const total = holdings.reduce((s, h) => s + getHoldingValueUSD(h), 0);
    document.getElementById('totalValue').textContent =
        '$' + total.toFixed(0);
}

function renderChart() {
    const categories = [
        { type:'gold', label:'Altƒ±n', color:'#fbbf24' },
        { type:'silver', label:'G√ºm√º≈ü', color:'#9ca3af' },
        { type:'platinum', label:'Platin', color:'#e5e7eb' },
        { type:'copper', label:'Bakƒ±r', color:'#b45309' },
        { type:'crypto', label:'Kripto', color:'#f59e0b' }
    ];

    const total = holdings.reduce((s,h)=>s+getHoldingValueUSD(h),0);
    const chartBar = document.getElementById('chartBar');
    const chartLegend = document.getElementById('chartLegend');

    if (!total) {
        chartBar.innerHTML = '';
        chartLegend.innerHTML = '<span style="color:var(--text-muted)">Hen√ºz varlƒ±k yok</span>';
        return;
    }

    chartBar.innerHTML = categories.map(c => {
        const val = holdings
            .filter(h=>h.type===c.type)
            .reduce((s,h)=>s+getHoldingValueUSD(h),0);
        if (!val) return '';
        return `<div class="chart-segment" style="width:${(val/total*100).toFixed(1)}%;background:${c.color}"></div>`;
    }).join('');

    chartLegend.innerHTML = categories.map(c => `
        <div class="legend-item">
            <div class="legend-dot" style="background:${c.color}"></div>
            <span>${c.label}</span>
        </div>
    `).join('');
}

function renderHoldings() {
    let list = currentFilter==='all'
        ? holdings
        : holdings.filter(h=>h.type===currentFilter);

    if (!list.length) {
        holdingsList.innerHTML =
            '<div class="empty-state"><i class="fas fa-wallet"></i><p>Hen√ºz varlƒ±k yok</p></div>';
        return;
    }

    holdingsList.innerHTML = list.map(h=>`
        <div class="holding-card">
            <div class="holding-info">
                <div class="holding-name">${h.type}</div>
                <div class="holding-detail">${getHoldingValueUSD(h).toFixed(2)} $</div>
            </div>
        </div>
    `).join('');
}

/* =======================
   POE PRICE UPDATE
======================= */
if (window.Poe) {
    window.Poe.registerHandler('price-update-handler', result => {
        const msg = result.responses[0];
        if (msg.status !== 'complete') return;

        const data = JSON.parse(msg.content.match(/\{[\s\S]*\}/)[0]);

        holdings.forEach(h => {
            if (h.type==='gold' && data.prices.GOLD_GRAM)
                h.currentPrice = data.prices.GOLD_GRAM;
            if (h.type==='silver' && data.prices.SILVER_GRAM)
                h.currentPrice = data.prices.SILVER_GRAM;
            if (h.type==='platinum' && data.prices.PLATINUM_GRAM)
                h.currentPrice = data.prices.PLATINUM_GRAM;
            if (h.type==='copper' && data.prices.COPPER_KG)
                h.currentPrice = data.prices.COPPER_KG;
        });

        if (data.usdTryRate) usdTryRate = data.usdTryRate;
        render();
    });
}

refreshBtn.onclick = async () => {
    if (!window.Poe) return;

    let prompt = `Emtia fiyatlarƒ±nƒ± getir. SADECE JSON:\n`;
    prompt += `Gram Altƒ±n (TRY): GOLD_GRAM\n`;
    prompt += `Gram G√ºm√º≈ü (TRY): SILVER_GRAM\n`;
    prompt += `Gram Platin (TRY): PLATINUM_GRAM\n`;
    prompt += `Bakƒ±r (TRY/kg): COPPER_KG\nUSD/TRY kuru`;

    await window.Poe.sendUserMessage(
        `@GPT-5.1 ${prompt}`,
        { handler:'price-update-handler', stream:false, openChat:false }
    );
};
</script>

